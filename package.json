{
  "name": "scss-compile-setup",
  "version": "1.0.0",
  "description": "Bootstrap sass compile",
  "main": ".",
  "author": "Pophonic",
  "license": "MIT",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.7.2",
    "autoprefixer": "^9.4.8",
    "clean-css-cli": "^4.2.1",
    "node-sass": "^4.11.0",
    "postcss-cli": "^6.1.1",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1",
    "stylelint-scss": "^3.5.3",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "check-node-version": "^3.2.0",
    "npm": "^6.6.0"
  },
  "browserslist": [
    "last 1 major version",
    ">= 1%",
    "Chrome >= 45",
    "Firefox >= 38",
    "Edge >= 12",
    "Explorer >= 10",
    "iOS >= 9",
    "Safari >= 9",
    "Android >= 4.4",
    "Opera >= 30"
  ],
  "scripts": {
    "css:lint": "stylelint --config build/.stylelintrc --syntax scss \"scss/**/*.scss\" --cache --cache-location \"build/.stylelintcache/\"",
    "css:prefix": "postcss --config build/postcss.config.js --replace \"*.css\" \"!*.min.css\"",
    "css:compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/zkin-ui-kit.scss zkin-ui-kit.css",
    "css:minify": "cleancss --level 1 --source-map --source-map-inline-sources --output zkin-ui-kit.min.css zkin-ui-kit.css",
    "css": "npm run css:lint && npm run css:compile && npm run css:prefix && npm run css:minify"
  }
}
